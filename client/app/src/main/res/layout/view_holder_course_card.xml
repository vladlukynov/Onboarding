<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginEnd="@dimen/space_5x"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_course_picture"
        android:layout_width="130dp"
        android:layout_height="145dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_course_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/main_purple" />

        <ImageView
            android:id="@+id/iv_locked_tint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/image_tint" />

        <ImageView
            android:id="@+id/iv_lock_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="40dp"
            android:src="@drawable/ic_course_item_closed"
            app:tint="#292D32" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/mulish_medium"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_course_picture"
        tools:text="UI Design" />

    <TextView
        android:id="@+id/tv_theme_count"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/mulish_medium"
        android:textColor="@color/text_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_course_name"
        tools:text="28 тем" />

</androidx.constraintlayout.widget.ConstraintLayout>