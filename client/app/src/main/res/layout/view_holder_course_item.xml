<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/course_item_background">

    <ImageView
        android:id="@+id/iv_status_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="@dimen/space_2x"
        android:layout_marginTop="@dimen/space_3x"
        android:layout_marginBottom="@dimen/space_3x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:srcCompat="@drawable/ic_course_item_closed" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_2x"
        android:ellipsize="end"
        android:fontFamily="@font/mulish_semibold"
        android:maxLines="10"
        android:textColor="#3A3636"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_status_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Основы основ" />
</androidx.constraintlayout.widget.ConstraintLayout>