<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_appeal_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_appeal_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/main_purple" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_appeal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4x"
        android:layout_mdarginTop="@dimen/space_2x"
        android:fontFamily="@font/mulish_bold"
        android:text="Обращение №1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/cv_appeal_picture"
        app:layout_constraintTop_toTopOf="@id/cv_appeal_picture" />

    <TextView
        android:id="@+id/tv_last_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4x"
        android:layout_marginBottom="@dimen/space_3x"
        android:fontFamily="@font/mulish_medium"
        android:text="спасибо!"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/cv_appeal_picture"
        app:layout_constraintStart_toEndOf="@id/cv_appeal_picture" />

    <TextView
        android:id="@+id/tv_appeal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:15"
        android:textColor="@color/main_purple"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_appeal_title" />
    
    <View
        android:background="@color/neutral_line"
        app:layout_constraintTop_toBottomOf="@id/cv_appeal_picture"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>