<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/gl_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/gl_start" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/gl_end" />

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/purple_decorator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_back_button"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_back_button_2"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_3x"
        android:fontFamily="@font/mulish_bold"
        tools:text="Текстовый блок"
        android:textColor="@color/main_yellow"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_header"
        app:layout_constraintStart_toStartOf="@id/gl_start" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/space_7x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/iv_header">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_light"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Еще десять лет назад Лиз Сандерс (дизайнер и психолог, адепт идеи дизайна, ориентированного на человека — прим. ред.) объяснила мне, что UX дизайна не существует. Опыт — это личное переживание человека, и дизайнеры не владеют им. Однако мы можем создать что-то для человека в момент переживания. Это тонкое, но важное различие.Простой предлог «для» дает дизайнерам смирение в работе и открывает пространство для более тесного сотрудничества с людьми (между прочим, термин «пользователь» — узкий и оскорбительный ярлык для людей). В конце концов, опыт людей, для которых мы создаем продукты, определяет успешность сервисов, услуг и отношений, которые мы создаем." />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>