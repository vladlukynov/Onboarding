<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingVertical="14dp"
    android:background="@drawable/test_answer_background"
    android:paddingHorizontal="14dp"
    android:layout_marginHorizontal="1dp"
    android:elevation="5dp"
    android:layout_marginTop="@dimen/space_1x"
    android:layout_marginBottom="@dimen/space_2x"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_answer_variant"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/enter_code_number_background"
        android:fontFamily="@font/mulish_semibold"
        android:gravity="center"
        android:text="A"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_answer_text"
        android:layout_width="0dp"
        android:text="Horizontal with electric field "
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/space_3x"
        app:layout_constraintTop_toTopOf="@id/tv_answer_variant"
        app:layout_constraintBottom_toBottomOf="@id/tv_answer_variant"
        app:layout_constraintStart_toEndOf="@id/tv_answer_variant"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>